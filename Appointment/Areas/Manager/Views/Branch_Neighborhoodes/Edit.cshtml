@model List<Branch_NeighborhoodViewModel>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackround border">


    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>رسالة تأكيد ! &nbsp; </strong> تمت عملية التعديل بنجاح ...
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    }

    @if (Model.Count() == 0)
    {
        <p class="text-danger"> لا توجد أحياء مسجلة</p>
    }
    else
    {
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>إضافة أو إزالة الأحياء</h2>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {

                        <div class="form-check">

                            <input type="hidden" asp-for="@Model[i].NeighborhoodId" />
                            <input type="hidden" asp-for="@Model[i].NeighborhoodName" />

                            <input class="form-check-label mr-4" type="checkbox" asp-for="@Model[i].IsSelected">
                            <label class="form-check-label mr-2" asp-for="@Model[i].IsSelected">
                                @Model[i].NeighborhoodName
                            </label>

                        </div>

                    }

                </div>
                <div class="card-footer">
                    <input type="submit" value="تعديـل" class="btn btn-primary" style="width:auto" />
                    <a asp-action="Index" asp-controller="Home" asp-area="Emplooye" class="btn btn-primary">الغاء الأمر</a>
                </div>
            </div>
        </form>
    }

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

