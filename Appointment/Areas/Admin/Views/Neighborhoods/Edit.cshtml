@model NeighborhoodOperationViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackround border">
    <h2 class="text-info">تعديل بيانات الحي</h2>
    <br />

    <partial name="_StatusMessage" model="Model.StatusMessage" />

    <form asp-action="Edit" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(m => m.Neighborhoods.Id)

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Neighborhoods.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Neighborhoods.Name" class="form-control" />
                <span asp-validation-for="Neighborhoods.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">

            </div>
            <div class="col-5">
                <partial name="_UpdateAndBackToListButtonPartial" />
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
