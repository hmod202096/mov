@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="whiteBackround">

    <div class="row mb-3">
        <div class="col-12">
            <h2 class="bg-info text-white">صلاحيات الموظفين</h2>
        </div>

        
    </div>

    <table class="table table-sm table-bordered table-bordered">
        <tr>
            <th>الاسم</th>
            <th>تعديل</th>
            <th>حذف</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>

                <td>@role.Name</td>

                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">تعديل</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                           حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
