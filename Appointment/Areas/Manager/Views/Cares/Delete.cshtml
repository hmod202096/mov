@model CarAndCarTypeViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackround border">

    <h2 class="text-info">حذف بيانات السيارة</h2>
    <br />

    <form asp-action="Delete" method="post">


        @Html.HiddenFor(m => m.Cares.PlatId)

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.PlatId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cares.PlatId" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.model" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cares.model" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.CareTypes.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cares.CareTypes.Name" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.Active" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cares.Active" disabled class="col-form-label" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">

            </div>
            <div class="col-5">
                <partial name="_DeleteAndBackToListButtonPartial" />
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

