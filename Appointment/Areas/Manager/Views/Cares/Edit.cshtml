@model CarAndCarTypeViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackround border">

    <h2 class="text-info">تعديل بيانات السيارة</h2>
    <br />

    <partial name="_StatusMessage" model="Model.StatusMessage" />

    <form asp-action="Edit" method="post">



        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(m => m.Cares.PlatId)
        <input type="hidden" asp-for="Cares.BranchId" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.model" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cares.model" class="form-control" />
                <span asp-validation-for="Cares.model" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cares.TypeId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Cares.TypeId" class="form-control"
                        asp-items="@(new SelectList(Model.CareTypesList,"Id","Name"))">
                </select>
                <span asp-validation-for="Cares.TypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">

            </div>
            <div class="col-5">
                <partial name="_UpdateAndBackToListButtonPartial" />
            </div>
        </div>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
