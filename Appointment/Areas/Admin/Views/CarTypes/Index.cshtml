@model IEnumerable<CareTypes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackround border">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">قائمة أنواع السيارات</h2>
        </div>

        <div class="col-6 text-left mb-1">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">لا توجد قائمة بأنواع السيارات مسجلة ...</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td style="width:150px">
                            <partial name="_operationsButtonsPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
