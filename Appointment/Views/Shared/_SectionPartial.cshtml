@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Appointment.Service.ISessionExtensions _sessionExtensions
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    var branch = await _sessionExtensions.GetBranch(HttpContextAccessor.HttpContext.Session);

    <section class="section-1">
        <div class="block-1">
            <div><a href="https://albr.org" target="_blank">info@albr.org</a></div>
            <div class="social-btn">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-skype"></i></a>
                <a href="https://twitter.com/AlbirRiyadh" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-google-plus-g"></i></a>
            </div>
        </div>
    </section>

    <section class="section-2">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/Images/Logo.png" width="50" height="50" /> <span style="font-size: 30px; color: darkgreen">جمعية البر بالرياض</span>
        </a>
        <div class="phone-appintment">
            <div class="appointment"><button type="button">اســـم الفــرع : @branch.Name</button></div>
            <div class="phone-number"><i class="fas fa-phone">@branch.PhoneNumber</i></div>
        </div>

       
    </section>

    
}
else
{
    <section class="section-1">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/Images/Logo.png" width="60" height="60" />
            <div style="font-size: 50px; color: darkgreen">جمعية البر بالرياض</div>
        </a>
    </section>
}

