@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="whiteBackround">
    <div class="row">

        <div class="col-md-4">
            @*<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                class="img-fluid" alt="Sample image">*@
            <img src="~/images/org.jpg"
                 class="img-fluid" alt="Sample image">
        </div>

        <div class="col-md-8">
            <h3 class="text-right">تسجيل الدخول</h3>
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">دخول</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">نسيت الرقم السري ؟</a>
                        </p>
                       
                        @*<p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل كمستخدم جديد</a>
                        </p>*@
                       
                    </div>
                </form>
            </section>
        </div>

    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}